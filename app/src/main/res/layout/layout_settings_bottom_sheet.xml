<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/menuChangePassword"
        style="@style/ReportOptionStyle"
        android:text="Changer le mot de passe"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/menuSettings"
        style="@style/ReportOptionStyle"
        android:text="Paramètres de confidentialité"
        android:drawableStart="@android:drawable/ic_menu_preferences"
        android:drawablePadding="16dp"/>

    <TextView
        android:id="@+id/menuLogout"
        style="@style/ReportOptionStyle"
        android:text="Déconnexion"
        android:textColor="#FF3B30"
        android:textStyle="bold"
        android:drawableStart="@android:drawable/ic_lock_power_off"
        android:drawablePadding="16dp"
        app:drawableTint="#FF3B30"/> </LinearLayout>